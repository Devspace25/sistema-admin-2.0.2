{
	"$schema": "vscode://schemas/tasks",
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run App",
			"type": "shell",
			"command": "C:/Users/Jesus/OneDrive/Documents/Sistema-Admin-2.0/.venv/Scripts/python.exe",
			"args": [
				"-B",
				"-m",
